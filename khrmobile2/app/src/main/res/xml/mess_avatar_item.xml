<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">


    <!-- Set màu nền-->
    <solid
        android:color="@color/dayoff_item" >
    </solid>

    <!-- đặt thuộc tính màu và độ rộng của đường viền -->
    <stroke
        android:width="3dp"
        android:color="@color/white" >
    </stroke>

    <!--    &lt;!&ndash; các thuộc tính căn chỉnh&ndash;&gt;-->
    <padding
        android:left="8dp"
        android:top="1dp"
        android:right="8dp"
        android:bottom="1dp" >
    </padding>

    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners
        android:radius="50dp" >
    </corners>

</shape>