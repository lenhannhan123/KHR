<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:id="@+id/lineardayoff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp">

        </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/imgMavatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@xml/message_item_pad">

    </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvMName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:padding="0dp"
                android:textAlignment="textStart"
                android:text="15 phút trước"
                android:textColor="#666666"
                android:textSize="8sp" />
            <TextView
                android:id="@+id/tvMcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@xml/message_item_pad"
                android:fontFamily="sans-serif-condensed"
                android:padding="6dp"
                android:text="Hôm nay mọi người khỏe không"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvMSendTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:padding="0dp"
                android:textAlignment="textEnd"
                android:text="15 phút trước"
                android:textColor="#666666"
                android:textSize="6sp" />

        </LinearLayout>

</LinearLayout>


    </LinearLayout>