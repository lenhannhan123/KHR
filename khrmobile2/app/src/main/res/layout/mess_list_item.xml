<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:id="@+id/lineardayoff"
    >
    <LinearLayout
        android:id="@+id/linenearmesslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp">
        <ImageView
            android:id="@+id/imgLMavatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@xml/mess_home_item"
            >

        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/tvLMname"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:padding="1dp"
                android:text="Le Nguyễn Thành Nhân"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvLMcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:padding="4dp"
                android:text="Hôm nay mọi người khỏe không"
                android:textColor="@color/black"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/tvLMSendTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:padding="3dp"
                android:textAlignment="textEnd"
                android:text="15 phút trước"
                android:textColor="#666666"
                android:textSize="5sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>

</LinearLayout>